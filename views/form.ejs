    <script>
      function setupStudentButtons() {
        const buttons = document.querySelectorAll('.student-btn');
        buttons.forEach(button => {
          button.addEventListener('click', function() {
            // Remove active class from all buttons
            buttons.forEach(btn => btn.classList.remove('active'));
            
            // Add active class to clicked button
            this.classList.add('active');
            
            // Fill form fields
            document.getElementById('roll').value = this.getAttribute('data-roll');
            document.getElementById('name').value = this.getAttribute('data-name');
            document.getElementById('reg').value = this.getAttribute('data-reg');
          });
        });
      }
      
      // Initialize when DOM is ready
      document.addEventListener('DOMContentLoaded', setupStudentButtons);

