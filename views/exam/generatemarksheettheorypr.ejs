<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Grade Sheet</title>

<style>
    body {
        font-family: Arial, sans-serif;
        background: #f5f5f5;
    }

    .sheet {
        width: 800px;
        margin: 25px auto;
        background: white;
        padding: 25px;
        border: 3px double #000;
    }

    .header {
        text-align: center;
        margin-bottom: 10px;
    }

    .header h2 {
        margin: 0;
        font-size: 26px;
        font-weight: bold;
    }

    .header h3 {
        margin: 5px 0;
    }

    .grade-btn {
        background: #1fb366;
        color: #fff;
        padding: 6px 20px;
        display: inline-block;
        border-radius: 5px;
        font-weight: bold;
    }

    .student-info {
        margin-top: 15px;
        font-size: 14px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 12px;
        font-size: 13px;
    }

    table th, table td {
        border: 1px solid black;
        padding: 6px;
        text-align: center;
    }

    .box {
        border: 1px solid black;
        margin-top: 18px;
        display: flex;
        height: 40px;
    }

    .box div {
        width: 50%;
        border-right: 1px solid black;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
    }

    .remark-box {
        border: 1px solid black;
        height: 70px;
        margin-top: 20px;
        padding: 5px;
        font-size: 14px;
    }

    .sign-row {
        margin-top: 40px;
        display: flex;
        justify-content: space-between;
        text-align: center;
        font-size: 14px;
    }

    .sign-row div {
        width: 30%;
    }

    .grading-scale {
        margin-top: 30px;
        font-size: 13px;
    }

    .grading-scale table {
        width: 100%;
        border: none;
    }

    .grading-scale td {
        border: none;
        padding: 3px;
        font-size: 13px;
    }
</style>

</head>
<body>

<% studentWisedata.forEach((data) => { %>

<div class="sheet">

    <!-- HEADER -->
    <div class="header">
      
        <h2>United English Boarding School</h2>
        <img src="/image.png" alt="">
        <p>Manahari-8, Simpani</p>
        <h3><%= terminal %> Terminal Examination - <%= academicYear %></h3>
        <div class="grade-btn">Grade Sheet</div>
    </div>

    <!-- Student Info -->
    <div class="student-info">
        <p><b>Student Name:</b> <%= data.name %></p>
        <p>
            <b>Class:</b> <%= studentClass %> &nbsp;&nbsp;
            <b>Section:</b> <%= section %> &nbsp;&nbsp;
            <b>Roll:</b> <%= data.roll %>
        </p>
    </div>

    <!-- SUBJECT TABLE -->
    <table>
        <thead>
            <tr>
                <th>S.N</th>
                <th>Subject</th>
                <th>Credit Hour</th>
                <th>Th GP</th>
                <th>Pr GP</th>
                <th>Final GP</th>
                <th>Final Grade</th>
                <th>Remarks</th>
            </tr>
        </thead>

        <tbody>

        <% 
        let totalCredit = 0;
        let totalGradePoints = 0;

        function getGP(percent) {
            if (percent >= 90) return 4.0;
            if (percent >= 80) return 3.6;
            if (percent >= 70) return 3.2;
            if (percent >= 60) return 2.8;
            if (percent >= 50) return 2.4;
            if (percent >= 40) return 2.0;
            if (percent >= 35) return 1.6;
            return 0.0;
        }

        function getGrade(gp) {
            if (gp === 4.0) return "A+";
            if (gp >= 3.6) return "A";
            if (gp >= 3.2) return "B+";
            if (gp >= 2.8) return "B";
            if (gp >= 2.4) return "C+";
            if (gp >= 2.0) return "C";
            if (gp >= 1.6) return "D";
            return "NG";
        }
        %>

        <% data.subjects.forEach((sub, index) => { %>

        <% 
        let thP = (sub.theorymarks / sub.theoryfullmarks) * 100;
        let prP = (sub.practicalmarks / sub.practicalfullmarks) * 100;
        let finalP = ((sub.theorymarks + sub.practicalmarks) /
                      (sub.theoryfullmarks + sub.practicalfullmarks)) * 100;

        let thGP = getGP(thP);
        let prGP = getGP(prP);
        let finalGP = getGP(finalP);

        totalCredit += sub.creditHour;
        totalGradePoints += finalGP * sub.creditHour;
        %>

        <tr>
            <td><%= index + 1 %></td>
            <td><%= sub.subject %></td>
            <td><%= sub.creditHour %></td>
            <td><%= thGP %></td>
            <td><%= prGP %></td>
            <td><%= finalGP %></td>
            <td><%= getGrade(finalGP) %></td>
            <td><% function getRemarks(finalgrade)
            {
                if (finalgrade === "NG") return "Needs Improvement";
                else if(finalgrade === "D") return "Satisfactory";
                else if(finalgrade === "C" || finalgrade === "C+") return "Good";
                else if(finalgrade === "B" || finalgrade === "B+") return "Very Good";
                else return "Excellent Performance";
            }%><%= getRemarks(getGrade(finalGP)) %></td>
        </tr>
<% totalAttendance = sub.attendance %>
        <% }) %>

        </tbody>
    </table>

    <!-- ATTENDANCE + GPA -->
    <div class="box">
        <div>Attendance: <%= totalAttendance %> </div>
        <div>GPA: <%= (totalGradePoints / totalCredit).toFixed(2) %></div>
    </div>

    <!-- REMARKS -->
    <div class="remark-box">
        <b>Remarks:</b><br>
        <% let gpa = (totalGradePoints / totalCredit); %>
        <% if (gpa >= 3.6) { %> Excellent Performance
        <% } else if (gpa >= 3.2) { %> Very Good
        <% } else if (gpa >= 2.4) { %> Good
        <% } else if (gpa >= 2.0) { %> Satisfactory
        <% } else { %> Needs Improvement <% } %>
    </div>

    <p><b>Issued Date:</b> <%= new Date().toLocaleDateString() %></p>

    <!-- SIGNATURES -->
    <div class="sign-row">
        <div>
            <br><br>_____________<br>
            Class Teacher
        </div>
        <div>
            <br><br>_____________<br>
            Exam Coordinator
        </div>
        <div>
            <br><br>_____________<br>
            Principal
        </div>
    </div>
    <hr>

    <!-- GRADING SCALE -->
    <div class="grading-scale">
        <table>
            <tr>
                <td>90% and above : A+</td>
                <td>50% and above: C+</td>
            </tr>
            <tr>
                <td>80% and above : A</td>
                <td>40% and above: C</td>
            </tr>
            <tr>
                <td>70% and above : B+</td>
                <td>35% and above: D</td>
            </tr>
            <tr>
                <td>60% and above : B</td>
                <td>Below 35% : NG</td>
            </tr>
        </table>
    </div>

</div>

<% }) %>

</body>
</html>
